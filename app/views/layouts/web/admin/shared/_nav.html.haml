= link_to t('.programmers_day'), root_path, class: :brand
.container.nav-collapse
  - if signed_in?
    %ul.nav
      %li= link_to t('.users'), admin_users_path
      %li= link_to t('.news'), '#'
      %li= link_to t('.settings'), '#'

    .btn-group.pull-right
      = link_to t('.sign_out'), session_path, method: :delete, class: 'btn'
    %ul.nav.pull-right
      %li
        = link_to edit_admin_user_path(current_user) do
          %i.icon-user
          = current_user
  - else
    %ul.nav
      %li= link_to t('.go_back'), root_path
