!!! 5
%html{:"xmlns:fb" => "http://ogp.me/ns/fb#"}
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta{property: "og:title", content: "#{title}"}
    %meta{property: "og:image", content: "http://prog73.ru/assets/card.jpg"}
    %meta{property: "og:site_name", content: "#{title}"}

    %title= title
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
      = stylesheet_link_tag "ie"
    /[if IE 6]
      :javascript
          location = '/ie6/index.html'

    = stylesheet_link_tag "application", :media => "all"

  %body
    = flash_block
    .main
      = yield :header
      = yield
      = render 'layouts/web/shared/footer'

    .up
      %a= image_tag '/assets/up.png'
    = javascript_include_tag "application"
    = javascript_include_tag 'http://widgets.twimg.com/j/2/widget.js'
