= javascript_include_tag 'http://widgets.twimg.com/j/2/widget.js'
:javascript
  new TWTR.Widget({

    version: 2,
    type: 'search',
    search: '#itday',
    interval: 30000,
    title: '#itday',
    subject: 'Новости из Twitter',
    width: 220,
    height: 300,
    theme: {
      shell: {
        background: '#ffffff',
        color: '#333333'
      },
      tweets: {
        background: '#f5f5f5',
        color: '#555555',
        links: '#0088cc'
      }
    },
    features: {
      scrollbar: true,
      loop: true,
      live: true,
      behavior: 'default'
    }
  }).render().start();

