.page-header
  = link_to new_admin_news_path, class: 'btn btn-success pull-right' do
    %i.icon-plus
    = t('.new')
  %h1
    = t('.news')

%table.table.table-striped
  %thead
    %tr
      %th= sort_link @q, :name
      %th= sort_link @q, :published_at
      %th= sort_link @q, :state

  %tbody
  - @news.each do |news|
    %tr
      %td= news
      %td= news.published_at
      %td= news.human_state_name
      %td
        .pull-right
          = link_to edit_admin_news_path(news), class: 'btn btn-mini btn-primary' do
            %i.icon-pencil
          &nbsp;
          = link_to admin_news_path(news), data: { confirm: t('.delete_confirm') }, method: :delete,
            class: 'btn btn-mini btn-danger' do
            %i.icon-trash

.pagination.pull-right
  = paginate @news

