= simple_form_for @user, url: url do |f|
  .row
    .span6
      = f.input :first_name
      = f.input :last_name
      = f.input :email
      = f.input :phone
    .span6
      = f.input :company
      = f.input :university
      = f.association :course
      = f.input :subscribe
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel'), admin_users_path, class: 'btn'
